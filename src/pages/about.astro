---
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Features4 from '~/components/widgets/Features4.astro';
import Hero from '~/components/widgets/Hero.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About Us',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About Unsuspicious"
    title="Unsuspicious Industries"
    subtitle="Founded in 2023, Unsuspicious Industries is a leading interdisciplinary research institution dedicated to advancing human knowledge through rigorous scientific inquiry. Our distinguished faculty and research staff pursue fundamental questions across computational sciences, mathematics, artificial intelligence, and related fields, maintaining the highest standards of academic excellence and scientific integrity."
  />


  <Features4
    title="Institute Leadership"
    tagline="Academic Administration"
    columns={2}
    items={[{
        title: 'CRN',
        description: 'Former technology entrepreneur with expertise in emerging markets and research commercialization.',
        icon: 'tabler:briefcase',
        link: ""
      },
      {
        title: 'Prof. PKD',
        description: 'Research director specializing in computational systems, artificial intelligence, and mathematical modeling.',
        icon: 'tabler:brain',
        link: "https://pkd.unsuspicious.org"
      },
    ]}
  />

  <!-- Academic Staff Widget ****************** -->
  <Features4
    title="Research Faculty & Staff"
    columns={1}
    items={[
      {
        title: 'Thomas C.', // curieux
        description: 'Research Assistant in Computational Engineering',
        icon: 'tabler:school',
      }
    ]}
  />

  <!-- Our Departments Section ************** -->

  <Features2
    title="Institutional Divisions"
    columns={3}
    items={[
      {
        title: 'Research Administration',
        description:
          'Our Research Administration oversees grant management, research compliance, institutional partnerships, and academic collaboration programs that support our scholarly mission.',
        icon: 'tabler:building-bank',
      },
      {
        title: 'Academic Affairs',
        description:
          'The Academic Affairs division manages our graduate programs, postdoctoral fellowships, visiting scholar programs, and maintains academic standards across all research activities.',
        icon: 'tabler:school',
      },
      {
        title: 'Publications & Outreach',
        description:
          'Our Publications division manages peer review processes, academic conferences, public engagement initiatives, and knowledge transfer programs that disseminate our research to broader communities.',
        icon: 'tabler:book-2',
      }
    ]}
  />


</Layout>