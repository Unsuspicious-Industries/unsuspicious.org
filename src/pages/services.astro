---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Features from '~/components/widgets/Features.astro';
import Hero from '~/components/widgets/Hero.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Layout from '~/layouts/PageLayout.astro';
import { getPermalink } from '~/utils/permalinks';
import Features3 from '~/components/widgets/Features3.astro';
import Features4 from '~/components/widgets/Features4.astro';

const metadata = {
  title: 'Services',
};
---
<Layout metadata={metadata}>
  <Hero
  tagline="Solutions That Deliver"
  title="Transform Your Ideas Into Reality"
  subtitle="From rapid prototyping to full-scale deployment, we're your end-to-end innovation partner. Our solutions have helped companies save an average of 40% in development time."
  image={{
    src: '~/assets/images/people2.png',
    alt: 'Unsuspicious Industries Innovation Lab',
  }}
/>

<Features
  title="Expert Solutions"
  subtitle="Proven results across industries"
  items={[
    {
      title: 'AI & Software Development',
      description: '• Custom AI solutions that cut costs by 30%\n• Cloud-native architecture\n• Rapid MVP development in 4-6 weeks\n• Performance optimization\n• 24/7 maintenance support',
      icon: 'tabler:code',
    },
    {
      title: 'Advanced R&D',
      description: '• Patent-pending research methodologies\n• Data-driven insights\n• Market analysis & validation\n• Proof-of-concept development\n• Research-to-market strategy',
      icon: 'tabler:microscope',
    },
    {
      title: "Strategic Consulting",
      description: '• Tech stack optimization\n• Growth strategy planning\n• Risk assessment\n• Competitive analysis\n• Sustainability roadmapping',
      icon: 'tabler:presentation',
    },
    {
      title: "Industrial Innovation",
      description: '• IoT implementation\n• Process automation\n• Supply chain optimization\n• Quality control systems\n• Energy efficiency solutions',
      icon: 'tabler:building-factory-2',
    }
  ]}
/>

<!-- Add Success Stories -->
<Features2
  title="Real Results, Real Impact"
  subtitle="See how we've helped organizations like yours"
  items={[
    {
      title: '45% Cost Reduction',
      description: 'Automated workflow for a Fortune 500 manufacturer',
      icon: 'tabler:chart-arrows-vertical',
    },
    {
      title: '2x Faster Development',
      description: 'AI-powered solution for healthcare provider',
      icon: 'tabler:rocket',
    },
    {
      title: '$2M in Savings',
      description: 'Supply chain optimization for retail chain',
      icon: 'tabler:coin',
    },
  ]}
/>

<!-- Add Industries Section -->
<Features3
  title="Industries We Serve"
  items={[
    {
      title: 'Media & Communications',
      description: 'Content delivery and generation solutions for media companies',
    },
    {
      title: 'Finance',
      image: '[finance-image]',
      description: 'Secure, scalable systems for financial institutions',
    },
    {
      title: 'Manufacturing',
      image: '[manufacturing-image]',
      description: 'Smart factory solutions for Industry 4.0',
    },
  ]}
/>

<CallToAction
  actions={[{
    variant: "primary",
    text: 'Schedule a Free Consultation',
    href: 'https://cal.com/unsuspicious/consult',
  },
  {
    variant: "secondary",
    text: 'View Case Studies',
    href: '/case-studies',
  }]}
  title="Ready to Innovate?"
  subtitle="Book a free 30-minute consultation with our experts. We'll analyze your needs and propose a custom solution plan within 48 hours."
/>

</Layout>
