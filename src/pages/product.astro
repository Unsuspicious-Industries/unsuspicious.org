---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

import CodeHero from '~/assets/images/code2.jpg';
import { getPermalink } from '~/utils/permalinks';

const metadata = {
title: 'Unsuspicious Industries Product Page',
};
---
<Layout metadata={metadata}>
<Hero
  tagline="Unsuspicious Products"
  title="Innovative systems from the unsuspicious team."
  subtitle="Sometimes, research leads to products !"
  image={{
    src: CodeHero,
    alt: 'A spotlight on a product from Unsuspicious Industries.',
  }}
  imageClass='blur-sm'
/>

<Hero2
  tagline="Custom AI Models"
  title="Unleash the Potential of AI with Tailored Solutions"
  subtitle="Our AI Lab offers custom AI model training services tailored to your specific needs. Whether you require computer vision, natural language processing, or any other AI application, our team of experts will work closely with you to develop and deploy high-performance AI models."
  actions={[
    { variant: 'primary', text: 'Contact Us', href: '/contact' },
    { text: 'Learn More', href: '#' },
  ]}
  image={{
    src: '~/assets/images/blueprint.png',
    alt: 'Custom AI Models',
  }}

/>

<Hero2
  tagline="Financial Analysis API"
  title="Unlock the Power of Real-Time Stock Price Predictions"
  subtitle="Our cutting-edge Financial Analysis API provides real-time analysis of stock price predictions. Leverage the power of our advanced algorithms to make informed investment decisions and stay ahead of the market."
  actions={[
    { variant: 'primary', text: 'Learn More', href: getPermalink("/financial/info") },
    { text: 'Demo', href: 'https://platform.unsuspicious.org' },
  ]}
  image={{
    src: 'https://images.unsplash.com/photo-1691643158804-d3f02eb456a3?q=80&w=1974&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D',
    alt: 'Financial Analysis API',
  }}
  reverse = {true}
/>

<Hero2
  tagline="Analog neuromorphic hardware"
  title="Improve AI efficiency and capabilities with better fitted hardware."
  subtitle="Our Hardware Design Department specializes in designing analog neuromorphic processors for AI applications. These processors are designed to mimic the functionality of biological neural networks, enabling efficient and powerful AI computations."
  image={{
    src: 'https://images.unsplash.com/photo-1697577418970-95d99b5a55cf?q=80&w=1992&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D',
    alt: 'Analog Neuromorphic Processors',
  }}
  
/>


</Layout>