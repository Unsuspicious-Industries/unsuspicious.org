---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

import CodeHero from '~/assets/images/code2.jpg';
import { getPermalink } from '~/utils/permalinks';
import { Image } from 'astro:assets';

const metadata = {
title: 'Applied Research Services',
};
---
<Layout metadata={metadata}>
<Hero
  tagline="Applied Research Services"
  title="Collaborative Research Programs & Technology Transfer"
  subtitle="Our institute offers specialized research collaboration opportunities and technology transfer services for academic institutions and industry partners."
  image={{
    src: CodeHero,
    alt: 'Research collaboration at Unsuspicious Industries.',
  }}
  imageClass='blur-sm'
/>

<Hero2
  tagline="Custom Research Solutions"
  title="Tailored Research Programs for Academic & Industry Partners"
  subtitle="Our research institute provides collaborative research programs and specialized expertise to academic and industry partners. Whether you require computational modeling, machine learning research, or interdisciplinary analysis, our faculty will work with you to develop rigorous research methodologies and deliver scholarly outcomes."
  actions={[
    { variant: 'primary', text: 'Research Collaboration', href: '/contact' },
    { text: 'View Our Expertise', href: '/faculty' },
  ]}
  image={{
    src: '~/assets/images/people2.png',
    alt: 'ML Collaboration',
  }}

/>

<Hero2
  tagline="Financial Mathematics Research"
  title="Quantitative Analysis & Mathematical Finance Research Platform"
  subtitle="Our Mathematical Finance Division provides rigorous quantitative analysis and research capabilities for academic institutions and financial organizations seeking evidence-based insights."
  actions={[
    { variant: 'primary', text: 'Research Collaboration', href: getPermalink("/financial/info") },
    { text: 'Academic Partnership', href: '/contact' },
  ]}
  image={{
    src: 'https://images.unsplash.com/photo-1691643158804-d3f02eb456a3?q=80&w=1974&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D',
    alt: 'Financial Analysis API',
  }}
  reverse = {true}
/>

<Hero2
  tagline="Analog neuromorphic hardware"
  title="Improve AI efficiency and capabilities with better fitted hardware."
  subtitle="Our Hardware Design Department specializes in designing analog neuromorphic processors for AI applications. These processors are designed to mimic the functionality of biological neural networks, enabling efficient and powerful AI computations."
  image={{
    src: 'https://images.unsplash.com/photo-1697577418970-95d99b5a55cf?q=80&w=1992&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D',
    alt: 'Analog Neuromorphic Processors',
  }}
  
/>


</Layout>