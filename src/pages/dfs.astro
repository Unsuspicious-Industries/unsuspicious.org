---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Stats from '~/components/widgets/Stats.astro';
import type { MetaData } from '~/types';
import DfsLogo from '~/assets/images/dfs-logo.png';

const metadata: MetaData = {
  title: 'DFS Lab - Dynamic Formal Systems Laboratory',
  description: 'Advancing artificial intelligence through formal methods, type theory, and constraint generation. Research at the intersection of mathematics and machine intelligence.',
};
---

<Layout metadata={metadata} logoSrc={DfsLogo.src} logoName="Dynamic Formal Systems" logoAcronym="DFS">
  <!-- Hero Widget ******************* -->
  <Hero
    tagline="Dynamic Formal Systems Laboratory"
    title="Advancing AI through <span class='text-accent highlight'>mathematical foundations</span>"
    subtitle="The DFS Lab explores the intersection of formal logic, type theory, and artificial intelligence. We develop mathematically rigorous AI systems using advanced constraint generation and formal verification methods."
    image={{
      src: 'https://images.unsplash.com/photo-1635070041078-e363dbe005cb?q=80&w=1000&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D',
      alt: 'Mathematical formulas and AI visualization',
    }}
  />

  <!-- Content Widget **************** -->
  <Content
    id="about"
    tagline="Research Focus"
    title="Formal Methods for Intelligent Systems"
    subtitle="Our research combines theoretical foundations with practical applications, creating AI systems that are both powerful and mathematically verifiable."
    items={[
      {
        title: 'Type-Theoretic AI',
        description: 'Developing AI systems based on System F and polymorphic lambda calculus, enabling reasoning about abstract mathematical structures and proofs.',
      },
      {
        title: 'Recursive Function Theory',
        description: 'Implementing Gödel\'s System T to create AI that can reason about computation, recursion, and mathematical induction.',
      },
      {
        title: 'Dynamic Constraint Systems',
        description: 'Building adaptive constraint generation frameworks that guide AI reasoning through mathematically sound logical structures.',
      },
    ]}
    image={{
      src: '~/assets/images/blueprint.png',
      alt: 'Mathematical network visualization',
    }}
    imageClass="rounded-lg shadow-lg"
  />

  <!-- Features Widget *************** -->
  <Features
    id="research"
    tagline="Research Areas"
    title="Core Research Domains"
    subtitle="Our interdisciplinary approach spans theoretical computer science, mathematical logic, and artificial intelligence"
    items={[
      {
        title: 'Constraint-Based Reasoning',
        description: 'Developing AI systems that generate, manipulate, and solve complex logical constraints in real-time applications.',
        icon: 'tabler:math-symbols',
      },
      {
        title: 'Formal Verification',
        description: 'Creating AI systems whose reasoning processes can be formally verified and mathematically proven correct.',
        icon: 'tabler:shield-check',
      },
      {
        title: 'Proof Synthesis',
        description: 'Building AI that can construct mathematical proofs and verify their correctness using automated theorem proving.',
        icon: 'tabler:checkup-list',
      },
      {
        title: 'Type System Design',
        description: 'Advancing dependent types and higher-order logic to create more expressive AI reasoning capabilities.',
        icon: 'tabler:topology-complex',
      },
      {
        title: 'Meta-Mathematical Reasoning',
        description: 'Developing systems that can reason about mathematical structures, theories, and their relationships.',
        icon: 'tabler:infinity',
      },
      {
        title: 'Adaptive Logic Systems',
        description: 'Creating dynamic logical frameworks that can evolve and optimize their reasoning strategies.',
        icon: 'tabler:arrows-exchange',
      },
    ]}
    columns={3}
  />

  <!-- Stats Widget ****************** -->
  <Stats
    id="stats"
    title="Research Impact"
    subtitle="Measuring our contributions to formal AI research"
    tagline="Current Metrics"
    stats={[
      {
        amount: '5',
        title: 'Formal Systems Implemented',
        icon: 'tabler:math-symbols',
      },
      {
        amount: '12',
        title: 'Research Papers In Progress',
        icon: 'tabler:file-text',
      },
      {
        amount: '3',
        title: 'Potentially Breakthrough Theorems',
        icon: 'tabler:trophy',
      },
      {
        amount: '∞',
        title: 'Lines of Proof Code',
        icon: 'tabler:certificate',
      },
    ]}
  />

  <!-- Hero2 Widget ****************** -->
  <Hero2
    tagline="Current Projects"
    title="Next-Generation Mathematical AI"
    subtitle="Our flagship research combines polymorphic type systems with dynamic constraint generation to create AI systems capable of sophisticated mathematical reasoning. We're building AI that doesn't just process information, but truly understands mathematical structure and logical relationships."
    actions={[
      { variant: 'primary', text: 'Research Publications', href: '/publications' },
      { text: 'Collaborate With Us', href: '/contact' },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1611273426858-450d8e3c9fce?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D',
      alt: 'AI and mathematics visualization',
    }}
  />

</Layout>