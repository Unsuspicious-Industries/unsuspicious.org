---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  


<HeroText
tagline="Connect with Us"
title="Research Collaboration & Academic Inquiries"
/>

<ContactUs
title="Contact Our Research Teams"
description="We welcome inquiries from fellow researchers, academic institutions, and industry partners. Our administrative staff will direct your inquiry to the appropriate research division or academic department."
inputs={[
  {
    type: 'text',
    name: 'name',
    label: 'Full Name',
  },
  {
    type: 'email',
    name: 'email',
    label: 'Institutional Email',
  },
  {
    type: 'text',
    name: 'affiliation',
    label: 'Institutional Affiliation',
  },
]}
textarea={{
  label: 'Research Inquiry or Collaboration Proposal',
}}
disclaimer={{
  label: 'By submitting this form, you agree to our research collaboration policies and data handling procedures. All inquiries are reviewed by our academic administration and research compliance team.',
}}
/>

<Features2
title="Research Collaboration Opportunities"
subtitle="Multiple pathways for academic and industry partnerships"
items={[
  {
    title: 'Academic Collaboration',
    description: "Partner with our research faculty on joint projects, co-authored publications, and shared research initiatives across our core competencies.",
    icon: 'tabler:school',
  },
  {
    title: 'Industry Partnerships',
    description: 'Collaborate with our applied research teams on technology transfer, commercialization opportunities, and industry-specific research programs.',
    icon: 'tabler:building-factory',
  },
  {
    title: 'Graduate Programs',
    description: "Explore our doctoral and postdoctoral research opportunities under the supervision of our distinguished faculty members.",
    icon: 'tabler:certificate',
  },
  {
    title: 'Research Administration',
    description: '+33 7 57 48 67 30',
    icon: 'tabler:phone',
  },
  {
    title: 'Academic Inquiries',
    description: 'contact@unsuspicious.org',
    icon: 'tabler:mail',
  },
  {
    title: 'Institute Location',
    description: 'Paris, France',
    icon: 'tabler:map-pin',
  },
]}
/>
</Layout>
