---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';


const metadata = {
  ignoreTitleTemplate: true,
};



---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    image={{ src: '~/assets/images/people.png', alt: 'Research Excellence' }}
    imageClass='height-150 sm:height-80 md:height-96 lg:height-96 xl:height-96'
    tagline="Advancing Human Knowledge Through Rigorous Research"
  >
    <Fragment slot="title">
      Pioneering <span class="text-accent highlight">scientific discovery</span> for tomorrow
    </Fragment>

    <Fragment slot="subtitle">
      The Unsuspicious Research Institute stands at the forefront of interdisciplinary research, where distinguished faculty and research staff collaborate to address the world's most complex challenges. Our commitment to academic excellence and scientific integrity drives fundamental contributions to human understanding across multiple fields of study.
    </Fragment>
  </Hero>

  <!-- Features Widget *************** -->

  <Features3
    id="features"
    tagline="Research Excellence"
    title="Distinguished Research Divisions"
    subtitle="Seven core research areas that define our institutional mission and scholarly contributions"
    items={[
      {
        title: 'Computational Sciences Division',
        description: 'Our computational scientists develop mathematical models and algorithmic solutions to advance theoretical understanding and practical applications.',
        icon: 'tabler:code',
      },
      {
        title: 'Advanced Systems Laboratory',
        description: 'Research in high-performance computing architectures, quantum systems, and next-generation computational infrastructure.',
        icon: 'tabler:cpu',
      },
      {
        title: 'Artificial Intelligence Research Group',
        description: 'Fundamental research in machine learning theory, cognitive systems, and the mathematical foundations of artificial intelligence.',
        icon: 'tabler:brain',
      },
      {
        title: 'Mathematical Finance Institute',
        description: 'Rigorous analysis of financial markets through mathematical modeling, stochastic processes, and computational methods.', 
        icon: 'tabler:chart-line',
      },
      {
        title: 'Biological & Environmental Sciences',
        description: 'Interdisciplinary research in computational biology, ecological modeling, and environmental systems analysis.',
        icon: 'tabler:leaf',
      },
      {
        title: 'Digital Arts & Humanities Lab',
        description: 'Scholarly investigation of the intersection between technology, creativity, and human expression in the digital age.',
        icon: 'tabler:palette',
      },
    ]},
    columns={3}
  />


  <!-- Stats Widget ****************** -->

  <Stats
    id="stats"
    title="Institutional Excellence"
    subtitle="Measurable impact in research and academic achievement."
    tagline="Academic Performance"
    stats={[
      {
        amount: '25+',
        title: 'Active Research Projects',
        icon: 'tabler:flask',
      },
      {
        amount: '5+',
        title: 'Faculty & Research Staff',
        icon: 'tabler:users',
      },
      {
        amount: '95%',
        title: 'Peer Review Acceptance Rate',
        icon: 'tabler:book',
      },
      {
        amount: '5000+',
        title: 'Cups of Coffee',
        icon: 'tabler:coffee',
      },
    ]}
  />


  <!-- Call to Action Widget ********* -->

  <CallToAction
    id="contact"
    title="Join Our Academic Community"
    tagline="Research Opportunities"
    actions={[
      { text: 'Research Collaboration', href: '/contact', variant: 'primary' },
      { text: 'Graduate Programs', href: '/programs', variant: 'secondary' },
    ]}
  />

</Layout>
